Screen:
    MDCard:
        size_hint: None, None
        size: 300,400
        background_color: (1.0, 0.0, 0.0, 1.0)
        pos_hint: {"center_x": 0.5,"center_y":0.5}
        elevation: 3
        padding: 25
        spacing: 20
        orientation: 'vertical'

        MDLabel:
            id: welcome_label
            color: 1,1,1,0.5
            text: "RUNGTA-CANTEEN"
            font_size: 28
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextField:
            id: user
            hint_text: "username"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size : 16
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_y: None
            width: 150
            font_size :16
            pos_hint:{"center_x":0.5}
